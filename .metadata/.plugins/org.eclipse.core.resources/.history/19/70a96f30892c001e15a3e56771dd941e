package entities;

public class Student {
	public String name;
	public double n1;
	public double n2;
	public double n3;

	public double finalGrade() {
		double result = n1 + n2 + n3;
		return result;
	}

	public String situation() {
		String oi = "oi";
		if (finalGrade() >= 60) {
			return "PASS";
		}else {
			return "FAILED";
		}
		
	}

}
