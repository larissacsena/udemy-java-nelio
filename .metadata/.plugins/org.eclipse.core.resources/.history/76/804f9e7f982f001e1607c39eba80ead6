package entities;

public class Student {
	public String name;
	public double n1;
	public double n2;
	public double n3;

	public double finalGrade() {
		double result = n1 + n2 + n3;
		return result;
	}

	public String situation() {
		if (finalGrade() >= 60) {
			return "PASS";
		} else {
			return "FAILED";
		}
	}

	public double missingPoints() {
		if (situation().equals("FAILED")) {
			double result = finalGrade() - 60;
			return result;
		} else {
		}

		return 0;
	}

}
