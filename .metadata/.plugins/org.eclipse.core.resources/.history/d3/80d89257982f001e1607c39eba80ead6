package aplication;

import java.util.Locale;
import java.util.Scanner;
import entities.Student;

public class ProgramStudent {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		Student estudante = new Student();
		System.out.println("Nome do aluno: ");
		estudante.name= sc.nextLine();
		
		System.out.println("Primeira nota: ");	
		estudante.n1= sc.nextDouble();
		
		System.out.println("Segunda nota: ");	
		estudante.n2= sc.nextDouble();
		
		System.out.println("Terceita nota: ");	
		estudante.n3= sc.nextDouble();
		
		System.out.println( "FINAL GRADE = "estudante.finalGrade());
		System.out.println(estudante.situation());
		System.out.println(estudante.missingPoints());
		sc.close();
	}
}
